<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/idea_regist_page_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_idea_regist"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/idea_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디어 플랫폼"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/image_idea_regist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/image_idea_regist"
                app:layout_constraintTop_toTopOf="@+id/image_idea_regist" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_idea_regist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginTop="@dimen/title_top_margin"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_idea_regist">

                <TextView
                    android:id="@+id/textview_idea_regist1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디어 등록"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@color/purple_500"
                    app:layout_constraintStart_toStartOf="@+id/textview_idea_regist1"
                    app:layout_constraintTop_toBottomOf="@+id/textview_idea_regist1" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view1"
                    app:layout_constraintTop_toBottomOf="@+id/textview_idea_regist1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textview_idea_regist1"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/contact_regist_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등록"
                        android:textColor="@color/purple_200"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view9"
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#BAB6B6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/contact_regist_cancel_bt"
                        app:layout_constraintStart_toEndOf="@+id/contact_regist_bt"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/contact_regist_cancel_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취소"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginTop="@dimen/textview_to_view"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_idea_regist1">

                <TextView
                    android:id="@+id/textview_contact2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자명"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/edittext_contact1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="홍길동"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/textview_contact2"
                    app:layout_constraintTop_toBottomOf="@+id/textview_contact2" />

                <View
                    android:id="@+id/view_contact3"
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/edittext_contact1"
                    app:layout_constraintTop_toBottomOf="@+id/edittext_contact1" />


                <TextView
                    android:id="@+id/textview_contact3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view_contact3" />

                <EditText
                    android:id="@+id/ideaRegistTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_edittext"
                    android:ems="14"
                    android:hint="제목을 입력해주세요"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#BAB6B6"
                    app:layout_constraintEnd_toEndOf="@+id/view_contact3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textview_contact3"
                    app:layout_constraintTop_toBottomOf="@+id/textview_contact3" />

                <View
                    android:id="@+id/view_contact4"
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/ideaRegistTitle"
                    app:layout_constraintTop_toBottomOf="@+id/ideaRegistTitle" />

                <TextView
                    android:id="@+id/textview_contact4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_contact4" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_contact3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/view_contact4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textview_contact4"
                    app:layout_constraintTop_toBottomOf="@+id/textview_contact4">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_regist"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/action_undo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_undo_24" />

                            <ImageButton
                                android:id="@+id/action_redo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_redo_24" />

                            <ImageButton
                                android:id="@+id/action_List_Bullet"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_format_list_bulleted_24" />

                            <ImageButton
                                android:id="@+id/action_subScription"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_format_indent_increase_24" />

                            <ImageButton
                                android:id="@+id/action_head"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_title_24" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/action_bold"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_format_bold_24" />

                            <ImageButton
                                android:id="@+id/action_italic"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_format_italic_24" />

                            <ImageButton
                                android:id="@+id/action_underline"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_format_underlined_24" />

                            <ImageButton
                                android:id="@+id/action_strikethrough"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_baseline_strikethrough_s_24" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_regist"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <jp.wasabeef.richeditor.RichEditor
                            android:id="@+id/editor_idea_regist"
                            android:layout_width="0dp"
                            android:layout_height="300dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view_contact6"
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/constraint_contact3"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_contact3" />

                <TextView
                    android:id="@+id/textview_contact5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textview_to_view"
                    android:text="첨부파일"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_contact6" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_layout"
                    app:layout_constraintEnd_toEndOf="@+id/view_contact6"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textview_contact5"
                    app:layout_constraintTop_toBottomOf="@+id/textview_contact5"
                    app:layout_constraintWidth_percent="0.9">

                    <Button
                        android:id="@+id/idea_file_upload_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:background="#D6D3D3"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="파일 선택"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="선택된 파일 없음"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/idea_file_upload_bt"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/file_upload_refer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="첨부할 수 있는 파일의 형식은 gif, png, jpg, jpeg, zip, hwp, xlx, docs, doc, pptx, pdf 만 가능합니다."
                    android:textColor="#BAB6B6"
                    android:textSize="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout5"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="각 파일의 최대 크기는 5MB이며 최대 두개까지 업로드가 가능합니다."
                    android:textColor="#BAB6B6"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/file_upload_refer"
                    app:layout_constraintStart_toStartOf="@+id/file_upload_refer"
                    app:layout_constraintTop_toBottomOf="@+id/file_upload_refer" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
