<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/nav_header_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="홈"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_idea_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="아이디어 플랫폼"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_anno_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="공고정보 게시판"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_notice_page1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="게시판"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_notice_page2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      공지사항"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_cs_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      문의게시판"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_contact_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="고객센터"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_member_update_page1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_member_update_page2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      회원정보수정"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_member_point_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      포인트현황"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_member_idea_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      내 아이디어"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_member_anno_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="      관심 사업"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nav_sign_in_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="로그인"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_sign_out_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nav_about_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="정보"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>