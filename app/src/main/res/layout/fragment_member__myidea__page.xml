<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_myidea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textview_myidea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디어 리스트"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="80dp"
                android:layout_height="5px"
                android:background="@color/purple_500"
                app:layout_constraintStart_toStartOf="@+id/textview_myidea1"
                app:layout_constraintTop_toBottomOf="@+id/textview_myidea1" />

            <View
                android:id="@+id/view2"
                android:layout_width="320dp"
                android:layout_height="2px"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textview_myidea1"
                app:layout_constraintTop_toBottomOf="@+id/textview_myidea1" />

            <Button
                android:id="@+id/sign_in_bt"
                android:layout_width="116dp"
                android:layout_height="35sp"
                android:layout_marginStart="10sp"
                android:background="@color/design_default_color_primary"
                android:text="아이디어 등록하기"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textview_myidea1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>